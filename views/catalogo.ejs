<div>
    <h1>Nova viagem</h1>
    </ul> 
    <form action="/viagem" method="POST"> 
        <input type="text" name="destino" placeholder="Destino"> 
        <input type="text" name="url" id="" placeholder="Url da Imagem">
        <input type="date" name="datasaida" id="" placeholder="Data da saida">
        <input type="date" name="datachegada" id="" placeholder="Data da chegada">
        <input type="text" name="descricao" placeholder="descrição">
        <input type="text" name="preco" placeholder="Preço">
        <button type="submit">Adicionar</button> 
    </form> 
</div>
<div>
    <h1>Menu</h1>
    <ul class="menu">
        <% viagens.forEach((viagem) => { %>
            <div>
                <div id="img">
                    <img src="<%= viagem.url %> " alt="Imagem de <%= viagem.destino %>">
                </div>
                <div id="info">
                    <h2> <%= viagem.destino %> </h2>
                    <p> <%= viagem.datachegada %> </p>
                    <p> <%= viagem.datasaida %> </p>
                    <p> <%= viagem.descricao %> </p>
                    <p> <%= viagem.preco %> </p>
                </div>
                <div class="d-flex">
                    <form method="POST" action="/viagem/delete" class="me-2">
                        <input
                            type="hidden"
                            name="id"
                            value="<%= viagem.idViagem %>"
                        />
                        <button type="submit" class="btn p-0">
                            <i class="bi bi-trash3 h3 text-danger"></i>
                        </button>
                    </form>
                    <a
                        href="/viagem/editar/<%= viagem.idViagem %>">
                        <i class="bi bi-pencil-square h3 text-black"></i
                    ></a>
                </div>
            </div>
        <% }); %>
    </ul>
</div>